@model TaskViewModel


@{
    ViewData["Title"] = "Alt Görev Ekle";
}

<h4>Alt Görev Ekle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSubtask" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Task.Text" class="form-control" />
            </div><br/>
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>