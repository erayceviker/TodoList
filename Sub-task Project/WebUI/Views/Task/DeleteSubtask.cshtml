@{
    ViewData["Title"] = "Alt Görev Sil";
}

@model TaskListViewModel

<form asp-action="DeleteSubtask" asp-controller="Task" method="post">

    <div class="form-group">
        <label for="">Görev Seçiniz</label>
        <select asp-for="@Model.Task.Id" class="form-control custom-select" id="taskId">
            <option value="" selected>Seçiniz</option>
            <option value="@Model.Task.Id">@Model.Task.Text</option>
            @foreach (var subTask in Model.Tasks)
            {
                <option value="@subTask.Id">@subTask.Text</option>
            }
        </select>
    </div><br/>
    <button class="btn btn-danger btn-sm">Sil</button>
</form>