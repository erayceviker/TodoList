@{
    ViewData["Title"] = "Liste Ekle";
}

@model Entities.Concrete.List

<h4>Liste Oluştur</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddList" asp-controller="List" method="post">
            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder="Liste İsmi"/>
            </div><br/>
            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>